[core]
    trustctime = false
    editor = nvim
    filemode = false
    autocrlf = input
    safecrlf = false
    pager = less -r
	attributesfile = ~/.gitattributes
[color]
    ui = true
[alias]
    co = checkout
    lg = log --color --graph --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status -s
    s = status -s
    ci = commit
    go = "!f() { git checkout -b \"\" 2> /dev/null || git checkout \"\"; }; f"
    tags = tag -l
    branches = branch -a
    unstage = reset HEAD
    amend = commit --amend
    untrack = "!f() { git ls-files -z ${1:-.} x | xargs -0 git update-index --assume-unchanged;}; f"
    br = branch
    cl = clone
    cp = cherry-pick
    current-branch-name = ! git branch | grep '*' | sed 's/* //'
    dc = diff --cached
    df = diff --color
    l = log --graph --pretty=format:'%C(yellow)%h%Creset%C(red)%d%Creset %C(white bold)%s%Creset %C(white dim)(by %an %ar)%Creset'
    lasttag = describe --tags --abbrev=0
    ld = !git l --date-order
    lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%n' --abbrev-commit --date=relative --branches
    ll = !git l --all
    lld = !git ll --date-order
    lm = !git l HEAD origin/master --not `git merge-base HEAD origin/master`^@
    ld = !git l HEAD origin/develop --not `git merge-base HEAD origin/develop`^@
    lt = describe --tags --abbrev=0
    pl = pull
    r = reset
    r1 = reset HEAD^
    r2 = reset HEAD^^
    rh = reset --hard
    rh1 = reset HEAD^ --hard
    rh2 = reset HEAD^^ --hard
    sa = stash apply
    sl = stash list
    ss = stash save
    undo = reset --soft HEAD^
    home = rev-parse --show-toplevel
    standup = git log --all --author=$USER --since='9am yesterday' --format=%s
[mergetool]
	keepBackup = false
	tool = meld
[push]
    default = matching
[pull]
    rebase = true
[grep]
    lineNumber = true
[rerere]
	enabled = true
[help]
    autocorrect = 1
[commit]
    template = ~/.git_commit_msg.txt
[user]
    name = Matthis LEMAITRE--COSQUER
    email = matthis.lemaitre-cosquer@niji.fr
[commit]
  verbose = true
[rebase]
  autostash = true
[diff]
  indentHeuristic = true
[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[diff "image"]
	command = ~/bin/git-imgdiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
